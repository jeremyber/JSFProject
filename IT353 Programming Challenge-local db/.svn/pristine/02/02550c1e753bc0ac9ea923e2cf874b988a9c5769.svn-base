<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <h:head>
        <title>Illinois Agland Services Inc. | Sign Up Page</title>
    </h:head>
    <link rel="stylesheet" type="text/css" href="./styles/primary.css"/>
    <h:body>
        
        <!--global header-->
        <div id="header">
            <ui:insert name="header" >
		  <ui:include src="./header.xhtml" />
            </ui:insert>
	</div>
        
        <h2>Illinois Agland Services Inc. Sign Up Page</h2><br/>
        <h:form>
            <h:panelGrid columns="2" columnClasses="nav-col, main-col" styleClass="middle-table"> 
            First Name: <h:inputText id="fnameID" value="#{loginController.theSign.firstName}">
            </h:inputText> <br/>
            Last Name: <h:inputText id="lnameID" value="#{loginController.theSign.lastName}">
            </h:inputText><br/>
            Email: <h:inputText id="email" value="#{loginController.theSign.email}">
            </h:inputText><br/>
            Username: <h:inputText id="username" value="#{loginController.theModel.username}">
            </h:inputText> <br/>
            Password: <h:inputSecret id="password" value="#{loginController.theModel.password}">
            </h:inputSecret> <br/>
            Confirm Password: <h:inputSecret id="passwordC" value="#{loginController.theSign.passwordConfirm}">
            </h:inputSecret> <br/>
            Security Question: <h:inputText id="securityQuestion" value="#{loginController.theSign.securityQ}">
            </h:inputText><br/>
            Security Answer: <h:inputText id="securityAnswer" value="#{loginController.theSign.securityA}">
            </h:inputText><br/>
            <h:commandButton id="submitID" value="Submit" action="#{loginController.signUpAccount()}"/>
            </h:panelGrid>
        </h:form>
    </h:body>
</html>