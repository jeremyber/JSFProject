<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    
    <h:head>
        <title>Create New Profile</title>
    </h:head>
    <h:body>
        <!--global header-->
        <div id="header">
            <ui:insert name="header" >
		  <ui:include src="./header.xhtml" />
            </ui:insert>
	</div>
        
        <h2>Create Profile</h2><br/>
        <h:form id="registrationForm">
            User Name: 
            <h:inputText id="userhameID" value="#{signupController.theUserModel.username}">
                <f:ajax event="keyup" render="availability" execute ="registrationForm" listener="#{signupController.validateUsername}"/>
            </h:inputText> 
            <h:outputText id="availability" escape="false" value="#{signupController.usernameAvailability}"/>
            <br/><br/>
            Password: <h:inputText id="passID" value="#{signupController.theLoginModel.password}">
            </h:inputText> <br/><br/>
            Re-Enter Password: <h:inputText id="repassID" value="#{signupController.confirmationPassword}">
            </h:inputText> <br/><br/>
            Email: <h:inputText id="emailID" value="#{signupController.theUserModel.email}">
            </h:inputText> <br/><br/>
            Re-Enter Email: <h:inputText id="reemailID" value="#{signupController.confirmationEmail}">
            </h:inputText> <br/><br/>
            First Name: <h:inputText id="firsnameID" value="#{signupController.theUserModel.firstname}">
            </h:inputText> <br/><br/>
            Last Name: <h:inputText id="lastnameID" value="#{signupController.theUserModel.lastname}">
            </h:inputText> <br/><br/>
            Security Question: <h:inputText id="questionID" value="#{signupController.theLoginModel.securityq}">
            </h:inputText> <br/><br/>
            Security Answer: <h:inputText id="answerID" value="#{signupController.theLoginModel.securitya}">
            </h:inputText> <br/><br/>
            <h:commandButton id="submitID" value="Submit" action="echosignup.xhtml"/>
        </h:form>
    </h:body>
</html>
