body {
    margin: 0;
}
div.nobreaks {
    line-height:10%;
}
div.left {
    float: left;
    width: 75%;
    height: 30px;
    line-height: 30px;
}
div.left a {
    height: 30px;
    line-height: 30px;
}
div.right {
    float: right;
    width: 25%;
    height: 30px;
    line-height: 30px;
}

div.right a:link,
div.right a:visited,
div.right a:active {
    text-decoration: none;
    padding: 3px;
    color: #2b65ec;
}
div.right a:hover {
    text-decoration: none;
    background-color: #000000;
    color: #e42217;
}
div.clear {clear: both;}
h2 {
    text-align: center;
}