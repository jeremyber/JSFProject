div.site {
    background: #ffffff;
    width: 70%;
    margin: auto;
}
div.form {
    padding: 10px 10px 15px 10px;
    border: 2px solid;
    line-height:50%;
    box-shadow: 7px 7px 3px #699cb3;
    background: #cfdffa
}
div.results { /* Containing div must have a position value */
    position:relative;
    padding: 5px 5px;
    border: 2px solid;
    box-shadow: 7px 7px 3px #699cb3;
}

div.results a {
    position:absolute;
    width:100%;
    height:100%;
    top:0;
    left:0;
    text-decoration:none; 
    z-index:10; 
    background-color:white; 
    opacity: 0; 
    filter: alpha(opacity=1);
}

div.results img {
    position: relative;
    max-width: 70%;
}