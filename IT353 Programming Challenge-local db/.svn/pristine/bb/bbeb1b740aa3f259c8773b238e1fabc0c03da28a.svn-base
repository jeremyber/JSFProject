<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    
    <h:head>
        <title>Illinois Agland Services Inc. | Login to Continue</title>
    </h:head>
    
    <h:body>
        
        <!--global header-->
        <div id="header">
            <ui:insert name="header" >
		  <ui:include src="./header.xhtml" />
            </ui:insert>
	</div>
        
        <h2>Illinois Agland Services Inc. Login Page</h2><br/>
        
        <h:form id ="loginForm">
            Username: 
            <h:inputText id="nameID" value="#{userController.theLoginModel.username}">
            </h:inputText> <br/><br/>
            Password: <h:inputSecret id="password" value="#{userController.theLoginModel.password}"></h:inputSecret><br/><br/>

            <h:commandButton id="submitID" value="Submit" action="#{userController.Login()}"/><br/>
            <h:commandLink id="signUpID" value="Don't have an account yet? Signup here!" action="./signup.xhtml"/><br/>
            <h:commandLink id="forgotPassword" value="Forgot your password?" action="./retrievepassword.xhtml" /><br/>
        </h:form>
    </h:body>
</html>