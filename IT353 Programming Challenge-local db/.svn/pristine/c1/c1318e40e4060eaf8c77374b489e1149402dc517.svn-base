<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <h:head>
        <title>Illinois Agland Services Inc. | Create New Profile</title>
    </h:head>
    <h:body>
        
     
        
        
        <link rel="stylesheet" type="text/css" href="./styles/primary.css"/>
        <!--global header-->
        <div id="header">
            <ui:insert name="header" >
          <ui:include src="./header.xhtml" />
            </ui:insert>
    </div>
        <div class="cartitems">
            <h:form>
              <h:dataTable value ="#{userController.theCartModel.items}" var="items">
                    <h:column>
                        <f:facet name="header">Title</f:facet>
                        #{items.title}
                    </h:column>
                    <h:column>
                        <f:facet name="header">Remove Item</f:facet>
                        <h:form>
                            <input type ="hidden" value="#{userController.theUserModel.username}" name ="username"/>
                            <input type ="hidden" value="#{items.listingID}" name="listingID"/>
                            <h:commandButton id="remove" value ="Remove" action="#{userController.removeItemFromCart()}"/>
                        </h:form>
                    </h:column>
              </h:dataTable>
            <h:commandButton id="checkout" value="Check Out" action="checkout.xhtml"/>
            </h:form>
        </div>
    </h:body>
</html>