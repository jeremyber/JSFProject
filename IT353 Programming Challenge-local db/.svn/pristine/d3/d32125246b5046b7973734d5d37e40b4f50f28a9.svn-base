<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html">
    <h:head>
        <title>Illinois Agland Services Inc. | Retrieve Password</title>
    </h:head>
    <h:body>
        <h2>Security Question</h2><br/>
        <h:form id="retrieveAnswer">
            
           Security Question: <h:outputText id="squestion" value="#{userController.theLoginModel.securityq}" /><br/>
           Answer: <h:inputText id="answer" value="#{userController.securityGuess}"/>
           <h:commandButton id="submitID" value="Next" action="#{userController.checkSecurityAnswer()}"/>
           <h:outputText id="result" value="#{userController.verificationOfAnswer}" />
           <!-- Link back to login screen -->
        </h:form>
    </h:body>
</html>