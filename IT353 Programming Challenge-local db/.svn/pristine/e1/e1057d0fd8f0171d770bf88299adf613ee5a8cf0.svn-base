body {
    margin: 0;
}
div#header {
    background: #ffffff;
    width: 100%;
    margin: 0;
    position: relative;
}
div.site {
    background: #ffffff;
    width: 1000px;
    margin: auto;
}
div.form {
    padding: 10px 10px 15px 10px;
    border: 2px solid;
    line-height:50%;
    box-shadow: 7px 7px 3px #699cb3;
    background: #cfdffa
}
div.results {
    padding: 5px 5px;
    border: 2px solid;
    box-shadow: 7px 7px 3px #699cb3;
}
div.nobreaks {
    line-height:10%;
}
#menu-item {
    display: block;
    width: 165px;
    height: 25px;
    line-height: 25px;
    text-align: center;
    text-decoration: none;
    color: #000000;
}
#menu-item:hover {
    text-decoration: none;
    background: #000000;
    color: #e42217;
}
div.loginPanel,
div.regPanel {
    background: #3a6cb3;
    border: 2px solid #000000;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 7px 7px 3px #173050;
    color: #ffffff;
}
div.loginPanel {
    width: 400px;
    padding: 20px 100px;
}
div.regPanel {
    width: 800px;
    padding: 20px 50px;
}
#title {
    color: #ffffff;
    font-weight: bold;
}
#label,#regLabel,#newLabel {
    display: inline-block;
    margin-right: 5px;
    height: 27px;
    line-height: 27px;
    font-size: 14pt;
}
#label {
    width: 150px;
    color: #ffffff;
    text-align: right;
}
#regLabel {
    width: 250px;
    color: #ffffff;
    text-align: right;
}
#newLabel {
    width: 175px;
    text-align: left;
}
a:link,
a:visited,
a:hover,
a:active {text-decoration: none;}
a.loginPanel:link,
a.loginPanel:visited {color: #434649;}
a.loginPanel:hover,
a.loginPanel:active {color: #299dbf;}