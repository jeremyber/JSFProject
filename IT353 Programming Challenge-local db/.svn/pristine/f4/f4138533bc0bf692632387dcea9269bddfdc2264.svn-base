<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core">
    <h:head>
        <title>Illinois Agland Services Inc. | Retrieve Password</title>
    </h:head>
    <h:body>
        <h2>Retrieve your password</h2><br/>
        <h:form id="retrieveUsername">
            Username: <h:inputText id="nameID" value="#{userController.theLoginModel.username}"/><br/>
            <h:commandButton id="submitID" value="Next" action="#{userController.attemptPasswordRetrieval()}"/>
            <h:outputText id="result" value="#{userController.passRetrieveSignal}" />
        </h:form>
    </h:body>
</html>